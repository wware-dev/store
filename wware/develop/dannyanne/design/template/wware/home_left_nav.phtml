function get_categories(){

$category = Mage::getModel('catalog/category'); 
$tree = $category->getTreeModel(); 
$tree->load();
$ids = $tree->getCollection()->getAllIds(); 
$arr = array();
if ($ids){ 
foreach ($ids as $id){
$cat = Mage::getModel('catalog/category');
$cat->load($id);
if($cat->isInRootCategoryList()){
	$arr[$id] = $cat->getName();
}
} 
}

return $arr;

}

