<script>
function qv_on(pid, imgurls){
	o = document.getElementById(pid);
	o.style.visibility = "visible";
	jQuery(o).animate({
		'width': '165px'
	},{
		'complete': function(){
			jQuery.get(	"/store/wware/getMediaGallery.php",
				{imgs:imgurls, id:pid.replace("qv", "")},
				function(data){
					o.innerHTML = data;
					o.innerHTML += '<a class="qv-close-button" href="javascript:void(0);" onclick="qv_off(this);">X</a>';
				}
			);
		}
	});

//	o.style.width = "165px";
	o.style.zIndex = 9999;
	o.pid = pid;
	
}

function qv_off(o){
	o = document.getElementById(o.parentNode.id);
	o.innerHTML = "";
	jQuery(o).animate({
		'width': '0px'
	},{
		'complete': function(){
			o.style.visibility = "hidden";
		}
	});
	

}

function qv_changeimg(imgUrl, id){
	o = document.getElementById("image" + id);
	o.setAttribute("src", imgUrl);
}

</script>

